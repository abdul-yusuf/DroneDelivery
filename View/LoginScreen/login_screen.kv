<LoginScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    on_pre_enter:
        email.text=''
        password.text=''
    MDButton:
        style: 'text'
        pos_hint: {'center_x': .1, 'top': .98}
        on_press: app.nav.prev()
        MDButtonIcon:
            icon: 'chevron-left'
            style: 'standard'
            size_hint: None, None
#            size: "84dp", "84dp"
            theme_font_size: "Custom"
            font_size: "36sp"

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_y': .7}
        MDBoxLayout:
            size_hint_max_y: .5
#            pos_hint: {'top':.5}
            padding: dp(16)
            orientation: 'vertical'
            spacing: dp(24)
            MDTextField:
                mode: 'outlined'
                id: email
                text: 'admin@mail.com'
                MDTextFieldHintText:
                    text: "Email"

            MDTextField:
                mode: 'outlined'
                id: password
                text: 'admin@pass'
                MDTextFieldHintText:
                    text: "Password"

            MDButton:
                style: 'text'
                pos_hint: {'center_x': .8}
                MDButtonText:
                    text: 'Forget Password'

            MDButton:
                style: "filled"
                theme_width: "Custom"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .8
                radius: dp(4)
                on_press:
                    root.model.email=email.text
                    root.model.password=password.text
                    root.model.do_login()
#                    app.add_screen('main screen')
                MDButtonText:
                    text: "Login"
                    pos_hint: {'center_x': .5, 'center_y': .5}

        MDBoxLayout:
            adaptive_size: True
            size_hint_x: .8
            pos_hint: {'center_x': .5}
            MDLabel:
                id: txt
                text: "Don't have an account?"

            MDButton:
                style: 'text'
                on_press: app.add_screen('signup screen')
                MDButtonText:
                    text: 'SignUp'
