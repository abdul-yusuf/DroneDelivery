                        text: "Item Qty: 2\n\n[b]TOTAL: ₦ 12,000.00[/b]"
            MDButton:
                style: 'filled'
                theme_width: 'Custom'
                width: root.width-dp(20)
                pos_hint: {'center_x': .5, 'center_y': .12}
                radius: dp(8)
                MDButtonText:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Checkout'
