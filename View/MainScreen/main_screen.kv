#:import ObjectProperty kivy.properties.ObjectProperty
<MainScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    on_pre_enter: self.controller.do_populate_chip_box()
    on_enter: rv.data = self.controller.model.items_data
    id: base_root
    MDScreenManager:
        id: home_screen_manager
        MDScreen:
            name: 'home'

            MDScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: 1, None
                size: root.width, root.height - dp(20)
#                effect_cls: DampedScrollEffect
        #        md_bg_color: app.theme_cls.backgroundColor
                MDGridLayout:
                    cols: 1
#                    adaptive_height: True
                    size_hint_y: None
                    height: self.minimum_height + dp(80)
                    spacing: dp(10)
                    padding: dp(10)

                    MDTextField:
                        on_text: root.controller.do_search(self.text)
                        MDTextFieldTrailingIcon:
                            icon: 'magnify'

                        MDTextFieldHintText:
                            text: "Search"
                    MDStackLayout:
                        id: chip_box
#                        cols: 3
                        spacing: dp(10)
                        adaptive_height: True

                    Rv:
                        id: rv
                        viewclass: 'ItemTile'
#                        data: root.controller.model.items_data
                        size_hint: 1, None
                        size: root.width, root.height - dp(40)
                        MDRecycleGridLayout:
                            padding: dp(10), dp(10), dp(10), dp(10)
                            default_size: None, None
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.parent.height
                            spacing: dp(10)
                            cols: 2

            MDFabButton:
                pos_hint: {"center_x": .85, "top": .18}
                icon: "shopping-search-outline"
                style: "standard"
                on_press: app.add_screen('vendor list screen')

        MDScreen:
            name: 'cart'
            on_enter:
                root.controller.do_check_if_cart_item()
                cart_info.text = f"Item Qty: {len(rv2.data)}\n\n[b]TOTAL: ₦ {sum(float(x['price'].split(',')[0]+x['price'].split(',')[1]) if x['qty']==1 else float(x['price'].split(',')[0]+x['price'].split(',')[1])*int(x['qty']) for x in rv2.data)}[/b]"

            RecycleView:
                id: rv2
                viewclass: 'CartItemTile'
                key_size: 'height'
                pos_hint: {'top': .78}
#                bar_width: dp(16)
#                scroll_type: ['bars', 'content']
                data: root.controller.model.cart_items
                size_hint: 1, None
                size: root.width, root.height - dp(120)
                RecycleGridLayout:
                    padding: dp(10), dp(10), dp(10), dp(10)
                    default_size: None, None
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height + dp(220)
                    spacing: dp(10)
                    md_bg_color: app.theme_cls.primaryColor
                    cols: 1
#            MDGridLayout:
#                cols: 1
#                padding: dp(10)
#                spacing: dp(10)
#                CartItemTile:
#                CartItemTile:
            MDBoxLayout:
                pos_hint: {'top': .92}
                adaptive_height: True
                orientation: 'vertical'
                spacing: dp(20)
                padding: dp(10)
                MDLabel:
                    text: 'Cart'
                    halign: 'center'
                    font_style: 'Headline'
                    bold: True
                MDCard:
                    adaptive_height: True
                    padding: dp(10)
                    MDLabel:
                        id: cart_info
                        adaptive_height: True
                        markup: True
                        text: "Item Qty: 2\n\n[b]TOTAL: ₦ 12,000.00[/b]"
            MDButton:
                id: checkout_btn
                disabled: True
#                style: 'outlined'
                theme_width: 'Custom'
                width: root.width-dp(20)
                pos_hint: {'center_x': .5, 'center_y': .12}
                radius: dp(8)
                on_release: bottom_sheet.set_state("toggle")
#                on_press: root.controller.do_go_to_checkout()
                MDButtonText:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Checkout'
            MDBottomSheet:
                MDBottomSheetDragHandle:
                    drag_handle_color: "white"

        MDScreen:
            name: 'profile'
            MDListItem:
                pos_hint: {'center_x': 0.5,'top': .92}
                adaptive_height: True
                id: user_detail
                ripple_behavior: False
                MDListItemLeadingIcon:
                    size_hint: None, None
        #            size: "84dp", "84dp"
                    theme_font_size: "Custom"
                    font_size: "56sp"
                    icon: 'alphabet-cyrillic'
                MDListItemHeadlineText
                    text: 'Jane Doe'
                MDListItemSupportingText:
                    text: 'janedoe@mail.com'

            MDBoxLayout:
                orientation: 'vertical'
#                adaptive_height: True
                size_hint_y: None
                height: root.height-(user_detail.height+dp(190))
                pos_hint: {'top': .8}
                ScrollView:
                    adaptive_height: True
                    size_hint_y: .8
                    height: root.height-(user_detail.height+dp(120))
                    MDList:
                        MDListItem:
                            MDListItemHeadlineText:
                                text: 'Edit Profile'
                        MDListItem:
                            on_press: app.add_screen('order history screen')
                            MDListItemHeadlineText:
                                text: 'Order history'
                        MDListItem:
                            MDListItemHeadlineText:
                                text: 'FAQ'
                        MDListItem:
                            MDListItemHeadlineText:
                                text: 'About Us'
                        MDListItem:
                            MDListItemHeadlineText:
                                text: 'Contact Us'
                        MDListItem:
                            divider: True
                            MDListItemHeadlineText:
                                text: 'Feedback'
                        MDListItem:
                            MDListItemHeadlineText:
                                text: 'Sign out'

                MDLabel:
                    adaptive_height: True
                    text: "Drone v 0.0.1"
                    padding: dp(20)
                    halign: 'center'

    BottomNav:
        screen_manager: root.ids.home_screen_manager

    MDBottomSheet:
        id: bottom_sheet
        shadow_softness: 100
#        md_bg_color: app.theme_cls.ba
        sheet_type: "standard"
        size_hint_y: None
#        height: self.minimum_height + dp(20)
        adaptive_height: True
#        height: dp(350)
        padding: dp(10)
        spacing: dp(30)

        MDBottomSheetDragHandle:
            drag_handle_color: "grey"
            MDBottomSheetDragHandleTitle:
#                text: "Select type map"
                pos_hint: {"center_y": .5}
            MDBottomSheetDragHandleButton:
                icon: "close"
                on_press: bottom_sheet.set_state("toggle")

        MDBoxLayout:
            id: box_container00
            adaptive_height: True
            padding: [dp(10), dp(10)]
            MDLabel:
                id: address_label
                markup: True
                text: "Home\n355,kamasasd rd,Loremn Ipsum has been here"

            MDButton:
                id: address_btn
                pos_hint: {'center_x': .5, 'center_y': .8}
                radius: dp(8)
                on_release: root.controller.do_set_dialog()
                MDButtonText:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Change'

        MDBoxLayout:
            id: box_container0
            adaptive_height: True
            padding: [dp(10), dp(1)]
            MDLabel:
                halign: 'left'
                text: "Delivery ETA "
            MDLabel:
                id: eta_label
                halign: 'right'
                text: "10 mins"

        MDBoxLayout:
            id: box_container0
            adaptive_height: True
            padding: [dp(10), dp(1)]
            MDLabel:
                halign: 'left'
                text: "Total Weight "
            MDLabel:
                id: total_weight_label
                halign: 'right'
                text: "10kg"

        MDDivider:
            size_hint_x: 1
            orientation: "horizontal"

        MDBoxLayout:
            id: box_container1
            adaptive_height: True
            padding: [dp(10), dp(1)]
            MDLabel:
                text: "Total "
                halign: 'left'
            MDLabel:
                id: checkout_total
                markup: True
                text: f"₦ {sum(float(x['price'].split(',')[0]+x['price'].split(',')[1]) if x['qty']==1 else float(x['price'].split(',')[0]+x['price'].split(',')[1])*int(x['qty']) for x in rv2.data)}"
#                text: "₦15,000.00"
                halign: 'right'

        MDDivider:
            size_hint_x: 1
            orientation: "horizontal"

        MDBoxLayout:
            id: box_container2
            adaptive_height: True
            padding: [dp(10), dp(1)]
            orientation: 'horizontal'

            MDButton:
                id: order_tn
                pos_hint: {'center_x': .5}
                radius: dp(8)
                theme_style: 'Custom'
                style: 'text'
                md_bg_color: app.theme_cls.primaryColor
                color: 'white'
                on_press: bottom_sheet2.set_state("toggle")
                MDButtonText:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Pay using:\n[size=34][b]Card[/b][/size]'
            Widget:
            MDButton:
                id: order_btn
                pos_hint: {'center_x': .5}
                radius: dp(8)
                theme_style: 'Custom'
                theme_width: 'Custom'
                size_hint_x: None
                width: dp(60)
                md_bg_color: app.theme_cls.primaryColor
                color: 'white'
                on_press:
                    root.controller.do_set_order({'items':rv2.data,
                    'total': sum(float(x['price'].split(',')[0]+x['price'].split(',')[1]) if x['qty']==1 else float(x['price'].split(',')[0]+x['price'].split(',')[1])*int(x['qty']) for x in rv2.data),
                    'items_qty': len(rv2.data),
                    'total_weight': total_weight_label.text,
                    'eta': eta_label.text,
                    'address': address_label.text,
                    'payment_method': 'Card'
                    })
                MDButtonText:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'Order'

        Widget:

    MDBottomSheet:
        id: bottom_sheet2
        shadow_softness: 100
#        md_bg_color: app.theme_cls.ba
        sheet_type: "modal"
        size_hint_y: None
#        height: self.minimum_height + dp(20)
        adaptive_height: True
#        height: dp(350)
        padding: dp(10)
        spacing: dp(30)

        MDBottomSheetDragHandle:
            drag_handle_color: "grey"
        MDLabel:
            text: "Payment Method"
            pos_hint: {"center_y": .5}
            halign: 'center'
            bold: True

        MDBoxLayout:
            id: box_container
            adaptive_height: True
            padding: [dp(10), dp(1)]
            spacing: dp(10)
            MDButton:
                id: cash_btn
                radius: dp(8)
                MDButtonText:
                    text: 'Cash'
                MDButtonIcon:
                    icon: 'cash'
            MDButton:
                id: card_btn
                radius: dp(8)
                MDButtonText:
                    text: 'Card'
                MDButtonIcon:
                    icon: 'card'
            MDButton:
                id: paypal_btn
                radius: dp(8)
                MDButtonText:
                    text: 'PayPal'
                MDButtonIcon:
                    icon: 'card'

        MDButton:
            id: select_btn
            theme_width: 'Custom'
            size_hint_x: .9
            pos_hint: {'center_x': .5, 'center_y': .8}
            radius: dp(8)
            on_press: bottom_sheet2.set_state("toggle")
            MDButtonText:
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Select'


        Widget:


<BottomNav>:
    md_bg_color: app.theme_cls.backgroundColor
    pos_hint: {'center_x': .5, 'top': .09}
    size_hint: 1, None
    height: dp(65)
    radius: dp(4)
    padding: [dp(20),dp(10)]
    selected: btn1
#    screen_manager:
#        spacing: root.width/3 - dp(45)
    MDRelativeLayout:
        MDButton:
            id: btn1
            pos_hint: {'left': 1}
            theme_width: 'Custom'
            width: dp(55)
            style: 'text'
            on_press:
                root.switch(self, 'home')
            MDButtonIcon:
                pos_hint: {'center_x': .5, 'center_y': .5}
                icon: 'home-outline'

        MDButton:
            pos_hint: {'center_x': .5}
            theme_width: 'Custom'
            width: dp(55)
            style: 'text'
            on_press:
                root.switch(self, 'cart')
            MDButtonIcon:
                pos_hint: {'center_x': .5, 'center_y': .5}
                icon: 'cart-outline'

        MDButton:
            pos_hint: {'right': 1}
            theme_width: 'Custom'
            width: dp(55)
            selected: True
            style: 'text'
            on_press:
                root.switch(self, 'profile')
            MDButtonIcon:
                id: icon
                pos_hint: {'center_x': .5, 'center_y': .5}
                icon: 'account-outline'

<ItemTile@MDCard>:
    id: root_card
    size_hint_y: None
    height: dp(280)
    orientation: 'vertical'
#    base_root: ObjectProperty()
#    on_press: base_root.controller.do_open_item_detail(self)
    pk: '1'
    name: 'asdasd'
    price: '2000'
    category: 'Restaurant'
    vendor: 'Amarya'
    discription: 'Lorem'
    image: 'assets/images/product1.jpg'

    FitImage:
        source: root.image
        size_hint_y: .6
        radius: self.parent.radius
    MDBoxLayout:
        adaptive_height: True
        padding: dp(10)
        orientation: 'vertical'
        MDLabel:
            adaptive_height: True
            text: f"{root_card.name}\n₦ {root_card.price}"
        MDGridLayout:
            adaptive_height: True
            cols: 2
            Widget:
            MDButton:
#                id: btn
                theme_width: 'Custom'
                width: dp(55)
                on_press: root.root_x.do_add_item_to_cart(root.pk)
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'cart-outline'

<CartItemTile@MDCard>:
    size_hint_y: None
    height: dp(180)
    orientation: 'vertical'
    id: card
    pk: '1'
    name: ''
    price: ''
    qty: 1
    image: 'assets/images/product1.jpg'

    MDBoxLayout:
        spacing: dp(10)
        padding: dp(10)
        FitImage:
            source: root.image
            size_hint_x: .4
            radius: card.radius
            orientation: 'vertical'
        MDLabel:
            adaptive_height: True
            text: f"{root.name}\n₦ {root.price}"
    MDBoxLayout:
        adaptive_height: True
        padding: dp(10)
        MDGridLayout:
            adaptive_height: True
            cols: 3
            MDButton:
                theme_width: 'Custom'
                width: dp(55)
                on_press: root.root_x.do_remove_item_from_cart(root.pk)
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'minus'
#            MDBoxLayout:
            MDLabel:
                halign: 'center'
                text: f'{root.qty} Qty'
            MDButton:
                theme_width: 'Custom'
                width: dp(55)
                on_press: root.root_x.do_add_item_to_cart(root.pk)
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'plus'

<CChip@MDBoxLayout>:
    adaptive_size: True
    md_bg_color: app.theme_cls.backgroundColor
#    size_hint_y: None
##    height: dp(40)
    MDChip:
        pos_hint: {"center_x": .5, "center_y": .5}
        MDChipText:
            text: "MDChip"

