<ItemCard@MDCard>
    adaptive_height: True
    radius: dp(5)
    orientation: 'vertical'
    md_bg_color: app.theme_cls.primaryColor
    AsyncImage:
        size_hint_y: None
        height: dp(280)
        source: "assets/images/product1.jpg"
    MDLabel:
        adaptive_height: True
        text: '[size=32]Cartier MD[/size]\n₦12000.00'
        markup: True
        bold: True

<FavItemCard@MDCard>
