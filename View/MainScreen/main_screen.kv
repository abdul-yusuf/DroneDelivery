<BottomNav>:
    md_bg_color: app.theme_cls.backgroundColor
    pos_hint: {'center_x': .5, 'top': .075}
    size_hint: 1, None
    height: dp(65)
    radius: dp(4)
    padding: [dp(20),dp(10)]
    selected: btn1
#    screen_manager:
#        spacing: root.width/3 - dp(45)
    MDRelativeLayout:
        MDButton:
            id: btn1
            pos_hint: {'left': 1}
            theme_width: 'Custom'
            width: dp(55)
            style: 'text'
            on_press:
                root.switch(self, 'home')
            MDButtonIcon:
                pos_hint: {'center_x': .5, 'center_y': .5}
                icon: 'home-outline'

        MDButton:
            pos_hint: {'center_x': .5}
            theme_width: 'Custom'
            width: dp(55)
            style: 'text'
            on_press:
                root.switch(self, 'cart')
            MDButtonIcon:
                pos_hint: {'center_x': .5, 'center_y': .5}
                icon: 'cart-outline'

        MDButton:
            pos_hint: {'right': 1}
            theme_width: 'Custom'
            width: dp(55)
            selected: True
            style: 'text'
            on_press:
                root.switch(self, 'profile')
            MDButtonIcon:
                id: icon
                pos_hint: {'center_x': .5, 'center_y': .5}
                icon: 'account-outline'

<ItemTile@MDCard>:
    size_hint_y: None
    height: dp(280)
    orientation: 'vertical'
    FitImage:
        source: 'assets/images/product1.jpg'
        size_hint_y: .6
        radius: self.parent.radius
    MDBoxLayout:
        adaptive_height: True
        padding: dp(10)
        orientation: 'vertical'
        MDLabel:
            adaptive_height: True
            text: "First Item\n₦ 12,000.00"
        MDGridLayout:
            adaptive_height: True
            cols: 2
            Widget:
            MDButton:
                theme_width: 'Custom'
                width: dp(55)
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'cart-outline'

<CartItemTile@MDCard>:
    size_hint_y: None
    height: dp(180)
    orientation: 'vertical'
    id: card
    MDBoxLayout:
        spacing: dp(10)
        padding: dp(10)
        FitImage:
            source: 'assets/images/product1.jpg'
            size_hint_x: .4
            radius: card.radius
            orientation: 'vertical'
        MDLabel:
            adaptive_height: True
            text: "First Item\n₦ 12,000.00"
    MDBoxLayout:
        adaptive_height: True
        padding: dp(10)
        MDGridLayout:
            adaptive_height: True
            cols: 3
            MDButton:
                theme_width: 'Custom'
                width: dp(55)
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'minus'
#            MDBoxLayout:
            MDLabel:
                halign: 'center'
                text: '3 Qty'
            MDButton:
                theme_width: 'Custom'
                width: dp(55)
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'plus'

<AccountItem@MDListItem>
    text: ''
    MDListItemHeadlineText
        text: root.text
