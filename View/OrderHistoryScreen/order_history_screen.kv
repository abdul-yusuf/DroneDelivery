<OrderHistoryScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    MDLabel:
        pos_hint: {'top': .92}
        text: 'Order History'
        bold: True
        halign: 'center'
        adaptive_height: True
        theme_font_size: 'Custom'
        font_size: '32sp'
    RecycleView:
        id: rv2
        viewclass: 'OrderCard'
        key_size: 'height'
#                bar_width: dp(16)
#                scroll_type: ['bars', 'content']
        data: [{},{},{},{},{},]
        size_hint: 1, None
        size: root.width, root.height - dp(120)
        RecycleGridLayout:
            padding: dp(10), dp(10), dp(10), dp(10)
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height + dp(120)
            spacing: dp(10)
            cols: 1


