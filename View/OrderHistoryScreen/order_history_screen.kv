<OrderHistoryScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    on_enter: root.model.do_get_order_list()
    MDBoxLayout:
        md_bg_color: app.theme_cls.backgroundColor
        pos_hint: {'center_x': .5, 'top': 1}
        size_hint: 1, None
        height: dp(65)
        radius: dp(4)
        padding: [dp(10)]
        MDRelativeLayout:
            MDButton:
                pos_hint: {'left': 1, 'center_y': .5}
                theme_width: 'Custom'
                width: dp(55)
                style: 'text'
                on_press:
                    app.nav.prev()
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'arrow-left'
            MDButton:
                pos_hint: {'right': 1, 'center_y': .5}
                theme_width: 'Custom'
                width: dp(55)
                style: 'text'
                on_press:
#                    app.switch(self, 'home')
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'dots-vertical'


    MDLabel:
        pos_hint: {'top': .92}
        text: 'Order History'
        bold: True
        halign: 'center'
        adaptive_height: True
        theme_font_size: 'Custom'
        font_size: '32sp'
    RecycleView:
        id: rv3
        viewclass: 'OrderCard'
        key_size: 'height'
#        data: [{},{'name': 'MacD'},{},{},{},]
        size_hint: 1, None
        size: root.width, root.height - dp(120)
        RecycleGridLayout:
            padding: dp(10), dp(10), dp(10), dp(10)
            default_size: 1, None
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height + dp(120)
            spacing: dp(10)
            cols: 1


<OrderCard@MDCard>
    id: box_drop
    radius: dp(12)
    orientation: 'vertical'
    size_hint_y: None
    height: dp(180)
    spacing: dp(10)
    padding: dp(10)
    image: "assets/images/product1.jpg"
    name: 'Cartier MD'
    weight: '2.1kg'
    unit: '2.1kg'
    date: 'Jul 15,2024 - 10:45 AM'
    price: 12000.00
    pk: 1
    status: ''
    MDBoxLayout:
        spacing: dp(10)
        FitImage:
            id: img_id
            size_hint: .4, None
            height: dp(108)
            source: root.image
            radius: dp(10)
        MDLabel:
            adaptive_height: True
            text: f'[size=18]{root.name}[/size]\n{root.weight}\n{root.date}\nâ‚¦{root.price}\n[color=FF5000]{root.status}[/color]'
            markup: True
            theme_font_size: 'Custom'
            font_size: '16px'
            bold: True
    MDButton:
        pos_hint: {'center_x': .5}
        theme_width: 'Custom'
        size_hint_x: .9
        on_press:
            root.rootx.controller.do_open_track_progress(root.pk)
#            app.add_screen('track order screen')
        MDButtonText:
            text: 'Track Order'
            pos_hint: {'center_x': .5, 'center_y': .5}