<ItemDetailScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    qty: 1
    on_pre_enter:
        self.controller.do_check_if_item_in_cart()
    on_enter:
        print(self.controller.model.item_detail)
        self.controller.update_qty()
        title.text = self.controller.model.data['name']
        details.name = self.controller.model.data['name']
        details.price = str(self.controller.model.data['price'])
        details.description = self.controller.model.data['description']
        root.controller.do_load_image()

    MDBoxLayout:
        md_bg_color: app.theme_cls.backgroundColor
        pos_hint: {'center_x': .5, 'top': 1}
        size_hint: 1, None
        height: dp(65)
        radius: dp(4)
        padding: [dp(10)]
        MDRelativeLayout:
            MDButton:
                pos_hint: {'left': 1, 'center_y': .5}
                theme_width: 'Custom'
                width: dp(55)
                style: 'text'
                on_press:
                    app.nav.prev()
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'arrow-left'
            MDButton:
                pos_hint: {'right': 1, 'center_y': .5}
                theme_width: 'Custom'
                width: dp(55)
                style: 'text'
                on_press:
#                    app.switch(self, 'home')
                MDButtonIcon:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'dots-vertical'
            MDLabel:
                id: title
                text: "Title"
                halign: 'center'

    MDBoxLayout:
        size_hint_y: .9
#        adaptive_height: True
        orientation: 'vertical'
        FitImage:
            id: image
            size_hint: 1, .6
#            source: self.controller.model.item_detail['image']
            adaptive_size: True
        MDLabel:
            size_hint_y: .4
#            adaptive_height: True
            padding: dp(10)
            markup: True
            id: details
            name: 'Title'
            price: '12,000.00'
            description: 'Lorem has been a standard for dummy text since 1550s'
            text: f'[b][size=33]{self.name}[/size][/b]\n[b]Price: â‚¦ {self.price}[/b]\n{self.description}'

    MDRelativeLayout:
        md_bg_color: app.theme_cls.backgroundColor
        pos_hint: {'center_x': .5, 'top': .075}
        adaptive_height: True
        MDButton:
            id: minus_btn
            pos_hint: {'left': .8, 'center_y': .5}
            theme_width: 'Custom'
            width: dp(55)
            style: 'text'
            on_press: root.controller.do_remove_item_from_cart()
            MDButtonIcon:
                pos_hint: {'center_x': .5, 'center_y': .5}
                icon: 'minus'
        MDButton:
            pos_hint: {'right': 1, 'center_y': .5}
            theme_width: 'Custom'
            width: dp(55)
            style: 'text'
            on_press: root.controller.do_add_item_to_cart()
            MDButtonIcon:
                pos_hint: {'center_x': .5, 'center_y': .5}
                icon: 'plus'
        MDLabel:
            text: f'{root.qty} QTY'
            halign: 'center'

    MDButton:
        id: add_to_cart_btn
        style: 'filled'
        theme_width: 'Custom'
        width: root.width - dp(40)
        pos_hint: {'center_x': .5, 'top': .07}
        radius: dp(8)
        on_press: root.controller.do_add_item_to_cart()
        MDButtonText:
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Add to Cart'

