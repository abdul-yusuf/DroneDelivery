<MySwiper@MDSwiperItem>
    image: "assets/images/intro1.png"
    bg: "assets/images/login_page1.png"
    RelativeLayout:
        AsyncImage:
            source: root.bg
            allow_stretch: True
        AsyncImage:
            source: root.image
            radius: [dp(20),]


<OnBoardingScreenView>
    md_bg_color: app.theme_cls.backgroundColor

    MDButton:
        style:  'text'
        pos_hint: {'center_x': .9, 'top': .95}
        on_press: app.add_screen('main screen')
        MDButtonText:
            text: 'Skip'

    MDSwiper:
        size_hint_y: None
        height: root.height - dp(440)
        y: root.height - self.height - dp(120)
        items_spacing: dp(5)
        MySwiper:
        MySwiper:
            image: "assets/images/intro2.png"
            bg: "assets/images/intro2b.png"
        MySwiper:
            image: "assets/images/intro3.png"
            bg: "assets/images/login_page1.png"

    MDBoxLayout:
        adaptive_height: True
        pos_hint: {'top': .35}
        padding: dp(10)
        orientation: 'vertical'
        MDLabel:
            adaptive_height: True
            text: 'Drone Delivery at your finger tips'
            halign: 'center'
            font_style: 'Headline'
            role: 'small'
            bold: True
        MDLabel:
            adaptive_height: True
            text: 'convinent method to book your upcoming travel, ensuring a seamless journey from planning to destination'
            halign: 'center'
            font_style: 'Body'
            role: 'medium'
    MDBoxLayout:
        pos_hint: {'top': .12}
        adaptive_height: True
        orientation: 'vertical'
        MDButton:
            style: 'filled'
            theme_width: 'Custom'
            size_hint_x: .65
#            height: dp(90)
            pos_hint: {'center_x': .5, 'center_y':.5}
            radius: dp(12)
            on_press: app.add_screen('main screen')
            MDButtonText
                text: 'Next'
                pos_hint: {'center_x': .5, 'center_y': .5}