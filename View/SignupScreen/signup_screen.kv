<SignupScreenView>
    md_bg_color: app.theme_cls.backgroundColor

    MDButton:
        style: 'text'
        pos_hint: {'center_x': .1, 'top': .98}
        on_press: app.nav.prev()
        MDButtonIcon:
            icon: 'chevron-left'
            style: 'standard'
            size_hint: None, None
#            size: "84dp", "84dp"
            theme_font_size: "Custom"
            font_size: "36sp"

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'top': .85}
        adaptive_height: True
        padding: dp(10)
        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(24)
            adaptive_height: True
            MDLabel:
                text: 'Signup'
                font_style: 'Display'
                role: 'small'
                bold: True

            MDTextField:
                id: first_name
                text: 'Yusuf'
                MDTextFieldHelperText:
                    id: HelperText
                    mode: "on_focus"
                    text: 'Enter First Name'
                MDTextFieldHintText:
                    id: HintText
                    text: 'First Name'

            MDTextField:
                id: last_name
                text: 'Abdul'
                MDTextFieldHelperText:
                    mode: "on_focus"
                    text: 'Enter Last Name'
                MDTextFieldHintText:
                    text: 'Last Name'

            MDTextField:
                id: email
                validator: "email"
                text: 'abdul@mail.com'
                MDTextFieldHelperText:
                    mode: "on_focus"
                    text: "user@gmail.com"
                MDTextFieldHintText:
                    id: HintText
                    text: 'Email'


            MDTextField:
                id: pwd
                text: '123'
                MDTextFieldHelperText:
                    mode: "on_focus"
                    text: "Password can't be blank or didn't match"
                MDTextFieldHintText:
                    text: 'Password'
                MDTextFieldTrailingIcon:
                    icon: "eye-off-outline"
#                    on_: print('Hidden')

            MDTextField:
                id: pwd2
                text: '123'
                MDTextFieldHelperText:
                    mode: "on_focus"
                    text: "Password can't be blank or didn't match"
                MDTextFieldHintText:
                    text: 'Confirm Password'
                MDTextFieldTrailingIcon:
                    icon: "eye-off-outline"
#                    on_: print('Hidden')

    MDButton:
        theme_width: 'Custom'
        size_hint_x: .8
        pos_hint: {'center_x': .5, 'top':.2}
        radius: dp(4)
        style: 'filled'
        on_press:
            root.controller.do_signup()
#            app.add_screen('mobile verification screen')
        MDButtonText:
            text: 'Sign Up'
            pos_hint: {'center_x': .5, 'center_y':.5}

    MDBoxLayout:
        adaptive_size: True
        size_hint_x: .8
        pos_hint: {'center_x': .5, 'top':.15}
        MDLabel:
            id: txt
            text: "Already have an account?"

        MDButton:
            style: 'text'
            on_press: app.add_screen('login screen')
            MDButtonText:
                text: 'Sign in'
