#import rgba kivy.utils.rgba
<OtpVerificationScreenView>
    md_bg_color: app.theme_cls.backgroundColor
    mobile_no: '090987654321'
    AsyncImage:
        source: 'assets/images/otp.png'
        size_hint: .8, .5
        pos_hint: {'center_x': .5, 'top': 1}

    MDBoxLayout:
        padding: dp(10)
        pos_hint: {'top': .65}
        adaptive_height: True
        MDLabel:
            adaptive_height: True
            halign: 'center'
            text: f"[size=28sp][b]Verification[/b][/size]\nAn OTP has been sent to [color=#FF0000] {root.mobile_no}[/color]"
            markup: True


    MDBoxLayout:
        padding: dp(60)
        spacing: dp(20)
        orientation: 'horizontal'
        pos_hint: {'top': .55}
        adaptive_height: True
        MDTextField:
            id: txt1
            on_text: txt2.focus=True
            mode: 'outlined'
            size_hint_x: .2
            max_text_length: 1

        MDTextField:
            id: txt2
            on_text: txt3.focus=True
            mode: 'outlined'
            size_hint_x: .2

        MDTextField:
            id: txt3
            on_text: txt4.focus=True
            mode: 'outlined'
            size_hint_x: .2
        MDTextField:
            id: txt4
            on_text: self.focus=False
            mode: 'outlined'
            size_hint_x: .2

    MDBoxLayout:
        pos_hint: {'top': .35}
        orientation: 'vertical'
        padding:dp(10)
        adaptive_height: True
        MDButton:
            style: 'filled'
            theme_width: 'Custom'
            size_hint_x: 1
#            height: dp(90)
            pos_hint: {'center_x': .5, 'center_y':.5}
            radius: dp(6)
            on_press: app.add_screen('on boarding screen')
            MDButtonText
                text: 'Verify'
                pos_hint: {'center_x': .5, 'center_y': .5}

        MDBoxLayout:
            adaptive_height: True
            size_hint_x: .9
            pos_hint: {'center_x': .5}
            MDLabel:
                id: txt
#                size_hint_x: 1
                adaptive_width: True
                text: "Didn't recieve verification code?"

            MDButton:
                style: 'text'
                MDButtonText:
                    text: 'Resend Again'